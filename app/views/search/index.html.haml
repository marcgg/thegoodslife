%section.wrapper.search-page
  - if params[:search].present?
    %h1
      Results for
      %span #{params[:search]}
  - else
    %h1 Browsing...
  .goods
    - @goods.each do |good|
      %article.good.jsGoodLink
        .graphic
          .photo{style:"background-image:url(#{good.photo_url});"}
          .map
            = image_tag 'http://api.tiles.mapbox.com/v3/benjaminbouwyn.map-r3r04347/url-bit.ly%2FTzrQOl(2.343813,48.857035)/2.343813,48.857035,13/200x75.png'
        %header
          %h2= link_to good.title, good_path(good)
        %section.stats
          .stat
            %span 10
            cities
          .stat
            %span 4
            owners
