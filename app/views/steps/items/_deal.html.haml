%article.step.deal.jsMilestone{'data-img'=> step.photo_url, 'data-lat'=> step.lat, 'data-long'=> step.long}
  - if step.open?
    = image_tag step.owner.photo_url, class: 'profil-pic'
  - else
    = image_tag step.winner.photo_url, class: 'profile-pic'
  .date= step.affected_date.strftime("%Y")

  %h4.title Deal
  - if step.open?
    .by #{user_link(step.owner)}
    %p
      #{step.owner.name} is giving this object!
  - else
    %p Good belongs to #{user_link(step.owner)}
